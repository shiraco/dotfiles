      <option name="COMMAND" value="flake8" />
      <option name="PARAMETERS" value="--max-line-length=120 --ignore=D100,D101,D102,D202,D203,D205,D400,E261,E262,E301,E302,E402,H301,H306,H404,H405,I100,I201,W404 $FileDir$" />
